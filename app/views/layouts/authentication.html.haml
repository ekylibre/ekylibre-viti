%html{xmlns: "http://www.w3.org/1999/xhtml", dir: t("i18n.dir"), lang: t("i18n.iso2"), "xml:lang" => t("i18n.iso2"), class: :authentication, style: (Ekylibre::CorporateIdentity::Visual.file? ? "background-image: url(#{Ekylibre::CorporateIdentity::Visual.url});" : nil)}
  %head
    = title_tag
    = csrf_meta_tags
    = viewport_tag
    = icon_tags
    -#= plugins_link_tag
    = theme_link_tag
    = javascript_pack_tag :legacy
    = javascript_pack_tag :application
    = javascript_include_tag :application, "data-turbolinks-track" => true
  %body.body-authentication
    = yield :popover
    #wrap
      #main
        #content
          .logo= image_tag("logo.svg")
          = notification_tag(:information, flash[:notice])
          = notification_tag(:error, flash[:alert])
          = notifications_tag
          = yield
    %footer#legals= legals_sentence
