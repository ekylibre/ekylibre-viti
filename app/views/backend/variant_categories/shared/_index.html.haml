= kujaku do |k|
  - k.text

- main_toolbar do |t|
  = t.pick params: { redirect: backend_product_nature_categories_path, selector_label: :product_nature_category.tl }
  = t.new params: { controller: '/backend/product_nature_categories', subdivision: controller_name }

  - %w[article animal crop equipment service worker zone].each do |nature|
    = link_to nature.pluralize.tl, send("backend_variant_categories_#{nature}_categories_path"), class: 'btn btn-default'

= main_list "constant_name" => "VariantCategories::#{controller_name.classify}"
