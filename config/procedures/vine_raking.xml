<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="vine_raking" categories="vine_soil_working_and_maintenance" actions="loosening" optional-actions="sowing_burying" position="40">
    <parameters>
      <target name="cultivation" filter="(is vitis or is land_parcel) and has indicator shape">
        <attribute name="working_zone" default-value="PRODUCT.shape" if="PRODUCT?"/>
      </target>
      <doer name="driver" filter="can drive(equipment) and can move" cardinality="*"/>
      <tool name="tractor" filter="is equipment and can catch(equipment) and can move" cardinality="*"/>
      <tool name="harrow" filter="is equipment and can plow_superficially" cardinality="*"/>
    </parameters>
  </procedure>
</procedures>
