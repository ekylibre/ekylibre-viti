<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="vine_pruning" categories="vineyard_maintenance" actions="cutting" position="20">
    <parameters>
      <target name="plant" filter="is vitis and has indicator shape">
        <attribute name="working_zone" default-value="PRODUCT.shape" if="PRODUCT?"/>
        <reading name="vine_pruning_system"/>
        <reading name="vine_stock_bud_charge"/>
      </target>
      <doer name="worker" filter="is worker and can drive(equipment) and can move" cardinality="*"/>
      <tool name="electric_pruning_shears" filter="is equipment and can cut" cardinality="*"/>
    </parameters>
  </procedure>
</procedures>
