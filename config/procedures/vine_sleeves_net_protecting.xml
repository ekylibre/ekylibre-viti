<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="vine_sleeves_net_protecting" categories="vine_protection" optional-actions="game_repellent, gas_refilling" position="40">
    <parameters>
      <target name="cultivation" filter="is plant and has indicator shape">
        <attribute name="working_zone" default-value="PRODUCT.shape" if="PRODUCT?"/>
      </target>
      <input name="protective_sleeves" filter="is matter" cardinality="*">
        <handler name="population"/>
      </input>
      <doer name="worker" filter="is worker and can move" cardinality="*"/>
      <doer name="driver" filter="is worker and can drive(equipment) and can move" cardinality="*"/>
      <tool name="tractor" filter="is equipment and can heat" cardinality="*"/>
      <tool name="net_implanter" filter="is equipment and can implant" cardinality="*"/>
    </parameters>
  </procedure>
</procedures>
