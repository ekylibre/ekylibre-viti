<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="vine_folding" categories="vineyard_maintenance" optional-actions="folding, tying, finishing_rerun" position="50">
    <parameters>
      <target name="plant" filter="is vitis and has indicator shape">
        <attribute name="working_zone" default-value="PRODUCT.shape" if="PRODUCT?"/>
      </target>
      <doer name="worker" filter="is worker and can move" cardinality="*"/>
      <tool name="hand_tying" filter="is equipment and can tie(plant)" cardinality="*"/>
    </parameters>
  </procedure>
</procedures>
