<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="vine_frost_protecting" categories="vine_protection" actions="frost_protection" position="30">
    <parameters>
      <target name="cultivation" filter="(is plant or is land_parcel) and has indicator shape">
        <attribute name="working_zone" default-value="PRODUCT.shape" if="PRODUCT?"/>
      </target>
      <input name="candles" filter="is matter" cardinality="*">
        <handler name="population"/>
      </input>
      <doer name="worker" filter="is worker and can move" cardinality="*"/>
      <tool name="frost_protection_equipemnt" filter="is equipment and can heat" cardinality="*"/>
    </parameters>
  </procedure>
</procedures>
