<?xml version="1.0"?>
<procedures xmlns="http://www.ekylibre.org/XML/2013/procedures">
  <procedure name="vine_leaves_removing" categories="vineyard_maintenance" position="90">
    <parameters>
      <target name="plant" filter="is vitis and has indicator shape">
        <attribute name="working_zone" default-value="PRODUCT.shape" if="PRODUCT?"/>
      </target>
      <doer name="driver" filter="is worker and can drive(equipment) and can move" cardinality="*"/>
      <doer name="worker" filter="is worker and can move" cardinality="*"/>
      <tool name="leaves_remover" filter="is equipment and can cut" cardinality="*"/>
    </parameters>
  </procedure>
</procedures>
